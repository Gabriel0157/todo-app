
<main>
    <section class="tarefas">
        {{#each tarefas}}
        <div class="tarefa">
            <form action="">
                <div class="completa">
                    <input type="checkbox" id="tarefa-1{{this.id}}" checked onchange="descompletarTarefa({{this.id}})">
                    <label for="tarefa-1{{this.id}}">{{this.id}}</label>
                </div>

                <button onclick="excluirTarefa({{this.id}})">
                    <img src="/public/imagens/x-icon.png" alt="icone de x para sair">
                </button>
            </form>
        </div>
        {{/each}}

        <div class="informacoes">
            <p>{{quantidadesTarefas}} tarefas completas</p>
            <div class="botoes">
                <a href="/">Todas</a>
                <a href="/ativas">Ativas</a>
                <a href="/completas" class="active">Completas</a>
            </div>
            <a href="/limparTarefas">Limpar tarefas</a>
        </div>

    </section>

    <section class="botoes">
        <a href="/">Todas</a>
        <a href="/ativas">Ativas</a>
        <a href="/completas" class="active">Completas</a>
    </section>
</main>
