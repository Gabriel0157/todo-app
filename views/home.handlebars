<main>
    <section class="tarefas">
        {{#each tarefas}}
        <div class="tarefa">
            <form action="">
                {{#if this.completa}}
                <div class="completa">
                    <input type="checkbox" id="tarefa-1{{this.id}}" checked onchange="desconpletarTarefa({{this.id}})">
                    <label for="tarefa-1{{this.id}}">{{this.id}}</label>
                </div>
                {{else}}
                <div class="completa">
                    <input type="checkbox" id="tarefa-1{{this.id}}" onclick="completarTarefas({{this.id}})">
                    <label for="tarefa-1{{this.id}}">{{this.id}}</label>
                </div>
                {{/if}}

                <button>
                    <img src="/public/imagens/x-icon.png" alt="icone de x para sair">
                </button>
            </form>
        </div>
        {{/each}}

        <div class="informacoes">
            <p>5 tarefas ativas</p>
            <div class="botoes">
                <a href="" class="active">Todas</a>
                <a href="">Ativas</a>
                <a href="">Completas</a>
            </div>
            <a href="">Limpar tarefas</a>
        </div>

    </section>

    <section class="botoes">
        <a href="" class="active">Todas</a>
        <a href="">Ativas</a>
        <a href="">Completas</a>
    </section>
</main>